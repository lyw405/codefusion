# Database
DATABASE_URL="file:./prisma/dev.db"

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers
# GitHub OAuth
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# GitLab OAuth
GITLAB_ID="your-gitlab-client-id"
GITLAB_SECRET="your-gitlab-client-secret"

# AI Provider keys (optional)
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
DEEPSEEK_API_KEY="your-deepseek-api-key"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ========================================
# 项目管理系统配置
# ========================================

# 基础目录配置
CODEFUSION_BASE_DIR=/data/codefusion

# Git 配置
GIT_CLONE_TIMEOUT=300000
GIT_DEFAULT_BRANCH=main

# GitHub 配置
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_USERNAME=your_github_username
GITHUB_API_BASE_URL=https://api.github.com
GITHUB_WEB_BASE_URL=https://github.com

# GitLab 配置
GITLAB_TOKEN=your_gitlab_personal_access_token
GITLAB_HOST=https://gitlab.com
GITLAB_API_BASE_URL=https://gitlab.com/api/v4
GITLAB_WEB_BASE_URL=https://gitlab.com

# Gitee 配置
GITEE_TOKEN=your_gitee_personal_access_token
GITEE_HOST=https://gitee.com
GITEE_API_BASE_URL=https://gitee.com/api/v5
GITEE_WEB_BASE_URL=https://gitee.com

# Bitbucket 配置
BITBUCKET_TOKEN=your_bitbucket_app_password
BITBUCKET_USERNAME=your_bitbucket_username
BITBUCKET_HOST=https://bitbucket.org
BITBUCKET_API_BASE_URL=https://api.bitbucket.org/2.0
BITBUCKET_WEB_BASE_URL=https://bitbucket.org

# 缓存配置
REPO_STATUS_CACHE_TTL=300000
PROJECT_LIST_CACHE_TTL=60000
